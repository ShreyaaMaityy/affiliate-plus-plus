# Frontend Endpoint
CLIENT_ENDPOINT=http://localhost:3000

# MongoDB
MONGO_URI=your_mongodb_connection_string_here

# Google Authentication
GOOGLE_CLIENT_ID=your_google_client_id_here

# JWT Secrets
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_TOKEN_SECRET=your_jwt_refresh_token_secret_here

# Gmail SMTP (for sending emails)
GMAIL_EMAIL_ID=your_email_here
GMAIL_APP_PASSWORD=your_app_password_here

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here
RAZORPAY_MONTHLY_PLAN_ID=your_monthly_plan_id_here
RAZORPAY_YEARLY_PLAN_ID=your_yearly_plan_id_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Node Environment
NODE_ENV=development

# Cloudinary (for image hosting)
CLOUDINARY_NAME=your_cloudinary_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
